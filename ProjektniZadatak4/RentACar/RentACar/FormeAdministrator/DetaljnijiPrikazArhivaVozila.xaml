            <Paragraph>
                <Run Text="Vrsta vozila:"/>
            </Paragraph>
        </RichTextBlock>
        <Button x:Name="button" Content="Izmijeni" HorizontalAlignment="Left" Margin="219,552,0,0" VerticalAlignment="Top" FontSize="18.667" FontWeight="Bold">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF0BDC44" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Page>
